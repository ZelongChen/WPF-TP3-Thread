<Application x:Class="WPF_TP1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_TP1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TitleTextBlock">
            <Setter Property="TextBlock.FontSize" Value="30"></Setter>
            <Setter Property="TextBlock.FontFamily" Value="Comic Sans MS"></Setter>
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="TextBlock.VerticalAlignment" Value="Top"></Setter>
        </Style>

        <Style x:Key="IndicatorTextBlock" BasedOn="{StaticResource TitleTextBlock}">
            <Setter Property="TextBlock.FontSize" Value="15"></Setter>
            <Setter Property="TextBlock.FontWeight" Value="Bold"></Setter>
        </Style>

    </Application.Resources>
</Application>
